<% provide(:title, @associate.name) %>
<table class="table table-striped">
	<thead>
		<th>Name</th>
		<th>Email</th>
		<th>Team</th>
	</thead>
	<tbody>
		<td><%= @associate.name %></td>
		<td><%= @associate.email %></td>
		<td><%= @associate.bio %></td>
		<td><%= link_to @associate.group.name, @associate.group %></td>
	</tbody>
</table>

<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab"><%= @associate.name %>'s Searches</a></li>
    <li><a href="#tab2" data-toggle="tab">Analytics</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <table class="table table-striped">
				<thead>
					<th>Client</th>
					<th>Position</th>
				</thead>
				<tbody>
					<%= render @searches %>
				</tbody>
			</table>
    </div>
    <div class="tab-pane" id="tab2">
      <table class="table table-striped">
				<tbody>
					<p>Analytics go here.</p>
				</tbody>
			</table>
    </div>
  </div>
</div>
